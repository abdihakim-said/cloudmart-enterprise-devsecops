{
  "dashboard": {
    "id": null,
    "title": "CloudMart Production Monitoring",
    "tags": ["cloudmart", "production", "kubernetes"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CloudMart Pods Status",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_pod_status_ready{namespace=\"default\", pod=~\"cloudmart.*\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [
              {"options": {"0": {"text": "Down"}}, "type": "value"},
              {"options": {"1": {"text": "Running"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Usage %",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"default\", pod=~\"cloudmart.*\"}[5m]) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0}
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=\"default\", pod=~\"cloudmart.*\"} / 1024 / 1024",
            "legendFormat": "{{pod}} MB"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "Pod Restarts (Last 1h)",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(kube_pod_container_status_restarts_total{namespace=\"default\", pod=~\"cloudmart.*\"}[1h])",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 5,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{namespace=\"default\", pod=~\"cloudmart.*\"}[5m])",
            "legendFormat": "{{pod}} RX"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{namespace=\"default\", pod=~\"cloudmart.*\"}[5m])",
            "legendFormat": "{{pod}} TX"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
      },
      {
        "id": 6,
        "title": "Node Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100",
            "legendFormat": "CPU % {{instance}}"
          },
          {
            "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
            "legendFormat": "Memory % {{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 14}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}
